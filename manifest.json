{
  "manifest_version": 3,
  "name": "Quick New Tab",
  "version": "1.0.5",
  "short_name": "QuickNewTab",

  "description": "Customize your Chrome New Tab page without breaking the UX.",
  "icons": {
    "24": "icon_24.png",
    "32": "icon_32.png",
    "64": "icon_64.png",
    "128": "icon_128.png",
    "512": "icon_512.png"
  },
  "homepage_url": "https://github.com/rmnoon/quick-new-tab",

  "permissions": ["storage"],

  "chrome_url_overrides": {
    "newtab": "newtab.html"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  }
}
